use_bpm 157
vocals ="C:/Users/Raymond_Kumamoto/Downloads/「Apacellaアカペラ」Bling-Bang-Bang-Born -- Mashle S2 Op [only vocals].wav"
clap ="C:/Users/Raymond_Kumamoto/Downloads/Clap Sound For Music Production  [ HD ].wav"

define :drum do
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 0.5
  sample :bd_ada
  sleep 0.5
end
define :claps do
  sample clap
  sleep 1
  sample clap
  sleep 1
  sample clap
  sleep 1
  sample clap
  sleep 0.5
  sample clap
  sleep 0.5
end

#intro
sample :vinyl_rewind

sleep 4

sample vocals

7.times do
  drum
end

sleep 4

live_loop :drums do
  7.times do
    drum
  end
  stop
end
live_loop :clapps do
  7.times do
    claps
  end
  stop
end

